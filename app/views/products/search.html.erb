<html>
<p><%= render partial: "title_form" %></p>
<table class="table_design">
<tr>
<%= render partial: "product_column_title" %>
    </tr>
    
    <% a_price = 0 %>
<% @products.each do |product| %>
 <tr>
 <td><%= render partial: "product", locals: {product: product} %></td>
 <%= render partial: "product_list", locals: {product: product} %>

    </tr>
    <% a_price = a_price + product.price if product.price %>
    <% end %>
     
                <div style="foat: left;">
                <%= render partial: "product_find_form" %>
              </div>
            
              <div>
              <% if current_user.id == (1 || 2 || 3) %>
              <div>合計:<%= number_to_currency(a_price,:precision =>0, :format=>"%n%u", :unit=>"円") %></div><!--precisionは小数点。標準だと小数点以下2位まで表示。%nはナンバー、%uがユニット。-->
                <% end %>
              </div>
</table>
  </html>